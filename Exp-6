    "\n",
    "sales_data = np.array([15000, 18000, 21000, 25000])  # Quarterly sales: Q1, Q2, Q3, Q4\n",
    "\n",
    "total_sales = np.sum(sales_data)\n",
    "percentage_increase = ((sales_data[3] - sales_data[0]) / sales_data[0]) * 100\n",
